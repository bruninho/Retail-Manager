<%= form_for @employee, :html => { :class => "form-horizontal employee" } do |f| %>

    <% if @employee.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @employee.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label 'First Name', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fname, :class => 'form-control' %>
    </div>
    <%= error_span(@employee[:fname]) %>
  </div>
  <div class="control-group">
    <%= f.label 'Last Name', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lname, :class => 'form-control' %>
    </div>
    <%= error_span(@employee[:lname]) %>
  </div>
  <div class="control-group">
    <%= f.label 'Store', :class => 'control-label' %> <!-- change this to drop down list of stores -->
    <div class="controls">
      <%= f.text_field :store, :class => 'form-control' %>
    </div>
    <%= error_span(@employee[:store]) %>
  </div>
  <div class="control-group">
    <%= f.label 'Date of Birth', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :dob, 'data-provide' => 'datepicker', :class => 'form-control' %>
    </div>
    <%= error_span(@employee[:dob]) %>
  </div>
  <div class="control-group">
    <%= f.label 'Basic Pay', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :basic_rop, :class => 'form-control' %>
    </div>
    <%= error_span(@employee[:basic_rop]) %>
  </div>
  <div class="control-group">
    <%= f.label 'Sunday/BH Pay', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sunday_bh_rop, :class => 'form-control' %>
    </div>
    <%= error_span(@employee[:sunday_bh_rop]) %>
  </div>
  <div class="control-group">
    <%= f.label 'Email', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%= error_span(@employee[:email]) %>
  </div>
  <div class="control-group">
    <%= f.label 'Starting Date', :class => 'control-label' %>
    <div class="controls">
            <%= f.text_field :date_joined, 'data-provide' => 'datepicker', :class => 'form-control' %>
    </div>
    <%= error_span(@employee[:date_joined]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            employees_path, :class => 'btn btn-default' %>

<% end %>
