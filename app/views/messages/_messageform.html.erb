<%= form_for(@message) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-danger">
            <h2><%= pluralize(@message.errors.count, "field") %> can't be left blank.</h2>
        </div>
    <ul>
      <% @message.errors.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table class="table table-striped text-left">
    <tbody>
      <tr><div class="field">
        <td><%= f.label "To:" %><br></td>
          <td><%= collection_select :message, :receiver, User.all, :id, :name ,{prompt: "Select a destination"},  { class: "form-control"}  %></td>
      </div></tr>

      <tr><div class="field">
        <td><%= f.label "Subject:" %><br></td>
        <td><%= f.text_field :subject, class: "form-control" %></td>
      </div></tr>

      <tr><div class="field">
        <td><%= f.label "Content:" %><br></td>
        <td><%= f.text_area :content , :rows => 5, class: "form-control"  %></td>
      </div></tr>
    </tbody>
  </table>
  <div class="actions">
    <%= f.submit "Send Message", class: "submit_btn btn btn-success" %>
  </div>
<% end %>


