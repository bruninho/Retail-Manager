<%= form_for(@message) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>
    </div>
  <% end %>
  <table class="table table-striped text-left">
    <tbody>
      <tr><div class="field">
        <td><%= f.label "To:" %><br></td>
        <td><%= f.text_field :receiver %><tr>
      </div></tr>

      <tr><div class="field">
        <td><%= f.label "Subject:" %><br></td>
        <td><%= f.text_field :subject %></td>
      </div></tr>

      <tr><div class="field">
        <td><%= f.label "Content:" %><br></td>
        <td><%= f.text_area :content , :rows => 5 %></td>
      </div></tr>
    </tbody>
  </table>
  <div class="actions">
    <%= f.submit "Send Message", class: "btn btn-success" %>
  </div>
<% end %>