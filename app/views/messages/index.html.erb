<div class="main-container container">
    <div class="row">
        <div class="col-md-3 col-sm-4" >
            <a href="#"><%= image_tag("cash.png", class: "img-main", alt: "cash report") %></a>
            <h2>Send a new message</h2>
            <p>Send a message to a specific store. Messaging system allows you to improve communication between stores. Please ensure you read all messages in your inbox.</p>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
            <h1>Inbox <span class="glyphicon glyphicon-inbox" aria-hidden="true"></span> </h1>
            <div class="table-responsive">
                <table class="table table-striped text-left">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>From</th>
                            <th>Subject</th>
                        </tr>
                    </thead>
                    <tbody>
                      <% @messages.each do |message| %>
                            <% if message.read == false %>
                                <tr class="danger">
                            <% else %>
                                <tr>
                            <% end %>
                            <td><%= message.created_at.strftime("%d %b. %Y - %H:%M") %></td>
                            <td><%= @user.find(message.user_id).name %></td>
                            <td><%= message.subject %></td>
                            <td><%= link_to 'Read' , read_path(:id => message.id), class: "btn btn-default"  %></td>
                            
                        </tr>
                      <% end %>
                    </tbody>
                </table>
                <p><%= will_paginate @messages, renderer: BootstrapPagination::Rails %></p>
              </div>
            <%= link_to "Send Message", sendmessage_path, class: "btn btn-success" %>
        </div>
    </div>
</div>