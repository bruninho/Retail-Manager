<div id="newsfeed" class="col-md-3 visible-lg-block visible-md-block">
				<h3>Messages Feed</h3>
                    <div class="table-responsive">
                        <table class="table table-hover text-left table-condensed">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>From</th>
                                    <th>Subject</th>
                                </tr>
                            </thead>
                            <tbody>
                              <% @messages.each do |message| %>
                                <% if message.read == false %>
                                    <tr class="danger">
                                <% else %>
                                    <tr>
                                <% end %>
                                    <td><%= message.created_at.strftime("%d %b. %Y - %H:%M") %></td>
                                    <td><%= @user.find(message.user_id).name %></td>
                                    <td><%= message.subject %></td>
                                    <td><%= link_to 'Read' , read_path(:id => message.id), class: "btn btn-default btn-xs" %></td>

                                </tr>
                              <% end %>
                            </tbody>
                        </table>
                        <p><%= will_paginate @messages, renderer: BootstrapPagination::Rails, :class => "pagination-sm" %></p>
                      </div>
			</div>