<%= form_for(@sale) do |f| %>
  <% if @sale.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <%= pluralize(@sale.errors.count, "error") %> prohibited this sale report from being saved:
      </div>
      <ul>
      <% @sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table class="table table-striped text-left">
    <tbody>
      <tr><div class="field">
        <td><%= f.label "Total Sales",:class => 'control-label' %><br></td>
        <td><%= f.text_field :total, :class => 'form-control' %><tr>
      </div></tr>

      <tr><div class="field">
        <td><%= f.label "Profit",:class => 'control-label' %><br></td>
        <td><%= f.text_field :profit, :class => 'form-control' %></td>
      </div></tr>

      <tr><div class="field">
        <td><%= f.label "Credit Card Sales",:class => 'control-label' %><br></td>
        <td><%= f.text_field :credit, :class => 'form-control' %></td>
      </div></tr>

      <tr><div class="field">
        <td><%= f.label "Cash Received",:class => 'control-label' %><br></td>
        <td><%= f.text_field :cash, :class => 'form-control' %></td>
      </div></tr>
    </tbody>
  </table>
  <div class="actions">
    <%= f.submit "Upload Report", class: "submit_btn btn btn-success" %>
  </div>
<% end %>


